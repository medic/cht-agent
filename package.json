{
  "name": "cht-agent",
  "version": "0.1.0",
  "description": "Hierarchical multi-agent system for CHT development workflows",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint .",
    "test": "mocha",
    "test:watch": "mocha --watch",
    "test:coverage": "nyc --reporter=text --reporter=text-summary --reporter=html npm test",
    "postinstall": "husky install",
    "research": "node dist/cli/research.js",
    "full": "node dist/cli/full.js",
    "example:research": "node dist/examples/research-supervisor-example.js",
    "example:full": "node dist/examples/full-workflow-example.js",
    "validate-cli": "node dist/scripts/validate-cli.js"
  },
  "dependencies": {
    "@langchain/anthropic": "^1.3.12",
    "@langchain/core": "^1.1.17",
    "@langchain/langgraph": "^1.1.2",
    "dotenv": "^16.6.1",
    "js-yaml": "^4.1.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@medic/eslint-config": "^1.2.0",
    "@types/chai": "^5.2.3",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^20.19.30",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^21.0.0",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "chai": "^6.2.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^8.0.3",
    "mocha": "^11.7.5",
    "mock-fs": "^5.5.0",
    "nyc": "^17.1.0",
    "prettier": "^3.8.1",
    "proxyquire": "^2.1.3",
    "sinon": "^21.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
